    <div class="ui huge header">ADD A BLOG <i class="edit outline icon"></i></div>
        <form class="ui big form"action="/blogs" method="post">
            <div class="field">
                <label>Title</label>
                <input type="text" name="blog[title]" placeholder="Blog Title"></input>
            </div>
            <div class="field">
                <label class>Image</label>
                <input type="text" name="blog[image]" placeholder="Image for Blog"></input>
            </div>
